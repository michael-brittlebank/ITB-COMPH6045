{% extends "layouts/main.twig" %}
{% block content %}
    <main id="page-cart" class="grid-container row">
        <div class="col-sm-12">
            <h1>Cart</h1>
        </div>
        <div class="col-sm-12">
            {% if cart %}
                <table border="0" cellspacing="0" cellpadding="0">
                    <thead>
                    <tr>
                        <td class="hide-for-small">Image</td>
                        <td>Title</td>
                        <td>Price</td>
                        <td class="text-center">
                            <span class="show-for-small">QTY</span>
                            <span class="hide-for-small">Quantity</span>
                        </td>
                        <td class="text-center">
                            <span class="hide-for-small">Update</span>
                        </td>
                        <td class="text-center">
                            <span class="hide-for-small">Remove</span>
                        </td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in cart.products %}
                        <tr>
                            <td class="hide-for-small">
                                <a href="{{ path_for('shop-product', {productUrlKey: product.url}) }}">
                                    <img src="//placeholdit.imgix.net/~text?txtsize=33&txt=Product%20Image&w=75&h=75"/>
                                </a>
                            </td>
                            <td>
                                <a href="{{ path_for('shop-product', {productUrlKey: product.url}) }}">{{ product.title }}</a>

                            </td>
                            <td>
                                €{{ product.price }}
                            </td>
                            <td class="text-center">
                                <input type="number" value="{{ product.quantity }}" min="0" max="99"/>
                            </td>
                            <td class="text-center">
                                <a class="cart-product-button-update" href="#" data-product-id="{{ product.id }}">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a class="cart-product-button-remove" href="#" data-product-id="{{ product.id }}">
                                    <i class="fa fa-times"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr class="text-right">
                        <td colspan="4"></td>
                        <td>Subtotal: </td>
                        <td>€{{ cart.subtotal }}</td>
                    </tr>
                    <tr class="text-right">
                        <td colspan="4"></td>
                        <td>Shipping: </td>
                        <td>€{{ cart.shippingTotal }}</td>
                    </tr>
                    <tr class="text-right">
                        <td colspan="4"></td>
                        <td>Total: </td>
                        <td>€{{ cart.total }}</td>
                    </tr>
                    </tfoot>
                </table>
                <div class="text-right">
                    <a href="{{ path_for('checkout') }}" class="header-link button">Checkout <i class="fa fa-chevron-right"></i></a>
                </div>
            {% else %}
                <p>
                    Nothing in Cart
                </p>
            {% endif %}
        </div>
    </main>
{% endblock %}