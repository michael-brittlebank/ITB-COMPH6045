{% extends "layouts/main.twig" %}
{% block content %}
    <main id="page-user-profile" class="grid-container row">
        <div class="col-sm-12">
            <h1>Profile</h1>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <h3>User Details</h3>
            <hr/>
            <p>
                <strong>First Name:</strong> {{ user.firstName }}
            </p>
            <p>
                <strong>Last Name:</strong> {{ user.lastName }}
            </p>
            <p>
                <strong>Email:</strong> <a href="mailto:{{ user.email }}">{{ user.email }}</a>
            </p>
            <a href="{{ path_for('user-profile-edit') }}" class="button">Edit Profile</a>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <h3>Update Password</h3>
            <hr/>
            <form id="user-profile-password-form" class="standard-form">
                <label for="user-profile-password">New Password</label>
                <input type="password" id="user-profile-password"/>
                <label for="user-profile-password-repeat">Repeat New Password</label>
                <input type="password" id="user-profile-password-repeat"/>
                <input type="hidden" id="user-profile-id" value="{{ user.id }}" readonly="readonly"/>
                <button type="submit" class="full-width">Update Password</button>
            </form>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <h3>Cart</h3>
            <hr/>
            {% if cart.products %}
                {% for product in cart.products %}
                    <p>
                        <a href="{{ path_for('shop-product', {productUrlKey: product.url}) }}">{{ product.title }}</a>
                        x {{ product.quantity }}
                    </p>
                {% endfor %}
                <a href="{{ path_for('cart') }}" class="button">Go To Cart</a>
            {% else %}
                <p>
                    Nothing in Cart
                </p>
            {% endif %}
        </div>
    </main>
{% endblock %}