{% extends "layouts/main.twig" %}
{% block content %}
    <main id="page-user-login" class="grid-container row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <h1>Login</h1>
            <form id="user-login-form" class="standard-form">
                <label for="user-login-email">Email</label>
                <input type="email" id="user-login-email" name="email"/>
                <label for="user-login-password">Password</label>
                <input type="password" id="user-login-password" name="password"/>
                <button type="submit">Submit</button>
            </form>
        </div>
    </main>
{% endblock %}