<header>
    <div class="container row">
        <div class="col-sm-6 col-md-2 col-lg-4">
            <a id="header-menu-home" href="/">
                <i class="fa fa-home"></i>
            </a>
        </div>
        <div class="col-sm-6 show-for-small text-right position-relative">
            <i id="header-mobile-menu" class="fa fa-bars" aria-hidden="true"></i>
        </div>
        <nav class="col-sm-10 col-lg-8 text-right hide-for-small">
            <ul class="standard-menu">
                <li class="{% if globals.path == path_for('shop') %}active{% endif %}">
                    <a href="{{ path_for('shop') }}">Shop</a>
                </li>
                <li class="{% if globals.path == path_for('login') or globals.path == path_for('register') or globals.path == path_for('profile') or globals.path == path_for('admin-dashboard')%}active{% endif %}">
                    <a>
                        <i class="fa fa-user-circle"></i>
                    </a>
                    <ul class="sub-menu">
                        {% if user %}
                            <li class="{% if globals.path == path_for('profile') %}active{% endif %}">
                                <a href="{{ path_for('profile') }}">Profile</a>
                            </li>
                            {% if user.role == 1 %}
                                <li class="{% if globals.path == path_for('admin-dashboard') %}active{% endif %}">
                                    <a href="{{ path_for('admin-dashboard') }}">Admin</a>
                                </li>
                            {% endif %}
                            <li>
                                <a href="{{ path_for('logout') }}">Logout</a>
                            </li>
                        {% else %}
                            <li class="{% if globals.path == path_for('login') %}active{% endif %}">
                                <a href="{{ path_for('login') }}">Login</a>
                            </li>
                            <li class="{% if globals.path == path_for('register') %}active{% endif %}">
                                <a href="{{ path_for('register') }}">Register</a>
                            </li>
                        {% endif %}
                    </ul>
                </li>
                <li class="{% if globals.path == path_for('cart') %}active{% endif %}">
                    <a href="{{ path_for('cart') }}">
                        <i class="fa fa-shopping-cart"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>