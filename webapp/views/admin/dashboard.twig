{% extends "layouts/main.twig" %}
{% block content %}
    <main class="grid-container row">
        <div class="col-sm-12">
            <h1>Products</h1>
            <div class="text-right">
                <a href="{{ path_for('admin-new') }}" class="header-link">Create New Product <i class="fa fa-chevron-right"></i></a>
            </div>
            {% if products %}
                <table border="0" cellspacing="0" cellpadding="0">
                    <thead>
                    <tr>
                        <td>Title</td>
                        <td>Price</td>
                        <td>Url</td>
                        <td>Edit</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>
                                {{ product.title }}
                            </td>
                            <td>
                                â‚¬{{ product.price }}
                            </td>
                            <td>
                                <a href="{{ path_for('shop-product', {productUrlKey: product.url}) }}">{{ path_for('shop-product', {productUrlKey: product.url}) }}</a>
                            </td>
                            <td>
                                <a href="{{ path_for('admin-edit', {productId: product.id}) }}" class="button">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% include 'components/pagination.twig' %}
            {% else %}
                <p>
                    No products available
                </p>
            {% endif %}
        </div>
    </main>
{% endblock %}