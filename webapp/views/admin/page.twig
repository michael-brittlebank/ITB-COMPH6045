{% extends "layouts/main.twig" %}
{% block content %}
    <main class="grid-container row">
        <div class="col-sm-12">
            <h1>Products</h1>
            <div class="text-right">
                <a href="{{ path_for('admin-new') }}" class="button">Create New Product <i class="fa fa-chevron-right"></i></a>
            </div>
            {% if products %}
                <table>
                    <thead>
                    <tr>
                        <td>Title</td>
                        <td>Price</td>
                        <td>Url</td>
                        <td>Edit</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>
                                {{ product.title }}
                            </td>
                            <td>
                                â‚¬{{ product.price }}
                            </td>
                            <td>
                                <a href="{{ path_for('shop-product', {product: product.urlKey}) }}">{{ path_for('shop-product', {product: product.urlKey}) }}</a>
                            </td>
                            <td>
                                <a href="{{ path_for('admin-edit', {productId: product.id}) }}" class="button">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% for i in range(1, (productCount/pageLimit)|round(0, 'ceil')) %}
                    {% if i == currentPage %}
                        <span>{{ i }}</span>
                    {% else %}
                        <a href="{{ path_for('admin-dashboard') }}?page={{ i }}" class="pagination-button">{{ i }}</a>
                    {% endif %}
                {% endfor %}
            {% else %}
                <p>
                    No products available
                </p>
            {% endif %}
        </div>
    </main>
{% endblock %}