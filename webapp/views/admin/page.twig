{% extends "layouts/main.twig" %}
{% block content %}
    <main>
        <h1>Products</h1>
        <a href="{{ path_for('admin-new') }}" class="button">Create Product</a>
        {% if products %}
            <table>
                {% for product in products %}
                    <tr>
                        <td>
                            {{ product.title }}
                        </td>
                        <td>
                            â‚¬{{ product.price }}
                        </td>
                        <td>
                            <a href="{{ path_for('admin-edit', {productId: product.id}) }}" class="button">Edit</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            {% for i in range(1, (productCount/pageLimit)|round(0, 'ceil')) %}
                {% if i == currentPage %}
                    <span>{{ i }}</span>
                {% else %}
                    <a href="{{ path_for('admin-dashboard') }}?page={{ i }}" class="pagination-button">{{ i }}</a>
                {% endif %}
            {% endfor %}
        {% else %}
            <p>
                No products available
            </p>
        {% endif %}
    </main>
{% endblock %}