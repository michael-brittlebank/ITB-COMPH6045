{% extends "layouts/main.twig" %}
{% block content %}
    <main id="page-admin-create-product" class="grid-container row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <h1>Create New Product</h1>
            <a href="{{ path_for('admin-dashboard') }}" class="header-link"><i class="fa fa-chevron-left"></i> Back</a>
            <form id="admin-create-product-form" class="standard-form">
                <label for="create-product-title">Product Title</label>
                <input type="text" id="create-product-title"/>
                <label for="create-product-price">Price</label>
                <input type="number" id="create-product-price" step="0.01" min="0.01"/>
                <label for="create-product-url">Product Url</label>
                <input type="text" id="create-product-url"/>
                <label for="create-product-category">Category</label>
                <select id="create-product-category">
                    <option value="" disabled="disabled" {% if product.categoryId|length < 1 %}selected="selected"{% endif %}>No Category</option>
                    {% for category in categories%}
                        <option value="{{ category.id }}" {% if category.id == product.categoryId %}selected="selected"{% endif %}>{{ category.name|capitalize }}</option>
                    {% endfor %}
                </select>
                <button type="submit">Submit</button>
            </form>
        </div>
    </main>
{% endblock %}